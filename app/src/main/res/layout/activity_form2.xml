                        android:textSize="20sp" />
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:onCheckedChanged="@{(view,value)->viewmodel.onSwitchCheckedChange(view,value,Constant.SWITCH_LAND_ALLOCATED_UTILISED)}"
                        android:checked="@={viewmodel.formType_2ObservableField.is_allocated_land_utilised}"/>
