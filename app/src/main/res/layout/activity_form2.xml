                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:onCheckedChanged="@{(view,value)->viewmodel.onSwitchCheckedChange(view,value,Constant.SWITCH_OTHER_SERVICES_PRESENT)}"
                            android:checked="@={viewmodel.formType_2ObservableField.is_other_servicemen_available}"/>
                    </LinearLayout>



