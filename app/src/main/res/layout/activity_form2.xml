                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="Poojari Name"
                        android:text="@={viewmodel.formType_2ObservableField.poojari_name}"

                        />


                </LinearLayout>

                <LinearLayout
