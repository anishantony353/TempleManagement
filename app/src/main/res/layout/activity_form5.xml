                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:onCheckedChanged="@{(view,value)->viewmodel.onSwitchCheckedChange(value)}"
                            android:checked="@={viewmodel.formType_5_ObservableField.has_occupant_encroached_plot}"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:weightSum="6"
                        android:visibility="@{viewmodel.formType_5_ObservableField.has_occupant_encroached_plot ? View.VISIBLE:View.GONE }">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="20dp"
                            android:layout_weight="2"
                            android:text="Area of Encroachment"
                            android:textColor="@color/white" />

                        <EditText
                            style="@style/MyEditTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:hint="असल्यास किती"
                            android:text="@={viewmodel.formType_5_ObservableField.encroachment_area}"
